######################################################################################################################################
# BASIC SETTINGS (objects, flags, etc.)
######################################################################################################################################

OBJS = main.o
BINARY_NAME = dcmstp-solver
LINKING_FLAGS = -O3 -std=c++11
COMPILATION_FLAGS = -c -O3 -std=c++11

######################################################################################################################################
# COMPILATION
######################################################################################################################################
all: $(OBJS)
		g++ $(OBJS) -o $(BINARY_NAME) $(LINKING_FLAGS)

%.o: %.cpp
		g++ -c $< -o $@ $(COMPILATION_FLAGS)

######################################################################################################################################
clean:
		rm *.o $(BINARY_NAME)
